{
  "name": "icjs-wallet",
  "version": "0.0.1",
  "description": "Utilities for handling IrChain keys",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "coverage": "istanbul cover _mocha",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "lint": "standard",
    "prepublishOnly": "npm run lint && npm run test:build",
    "test": "mocha ./test/*.js",
    "test:build": "npm run build:dist && mocha ./dist/test/*.js",
    "build:dist": "babel *.js test/*.js -d dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icjs/icjs-wallet.git"
  },
  "keywords": [
    "irchain",
    "wallets",
    "keys"
  ],
  "author": "IrChain Team <contact@irchain.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/icjs/icjs-wallet/issues"
  },
  "homepage": "https://github.com/icjs/icjs-wallet",
  "dependencies": {
    "aes-js": "^3.1.0",
    "bs58check": "^2.1.1",
    "icjs-util": "^0.0.1",
    "hdkey": "^0.8.0",
    "safe-buffer": "^5.1.1",
    "scrypt.js": "^0.2.0",
    "utf8": "^3.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "standard": "^11.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "ignore": [
      "dist/**"
    ]
  },
  "directories": {
    "test": "test"
  }
}
